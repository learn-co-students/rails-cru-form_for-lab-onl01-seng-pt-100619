<%= form_for @song do |song| %> 

    <%= song.label 'Song' %> <br> 
    <%= song.text_field :name %> <br> 

    <%= song.label 'Artist id' %> <br> 
    <%= song.text_field :artist_id %> <br> 

    <%= song.label 'Genre ID' %> <br> 
    <%= song.text_field :genre_id %> <br> 

    <%= song.submit "Create Song" %> 

<% end %> 